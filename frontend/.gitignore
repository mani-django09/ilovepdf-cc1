# Create .gitignore to exclude node_modules and other files
New-Item -Name ".gitignore" -ItemType File

# Add content to .gitignore
@"
# Dependencies
node_modules/
*/node_modules/

# Build outputs
frontend/build/
frontend/dist/
backend/uploads/

# Environment variables
.env
.env.local
.env.production

# Logs
*.log
npm-debug.log*

# Runtime data
pids
*.pid
*.seed
*.pid.lock

# Temporary folders
.tmp/
temp/

# IDE files
.vscode/
.idea/
*.swp
*.swo

# OS generated files
.DS_Store
.DS_Store?
._*
.Spotlight-V100
.Trashes
ehthumbs.db
Thumbs.db
"@ | Out-File -FilePath ".gitignore" -Encoding UTF8